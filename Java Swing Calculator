				String displayText = lblDisplay.getText();
		        String[] tokens = displayText.split(" ");
		        
		        double result = 0;
		        try {
		            result = Double.parseDouble(tokens[0]);
		        } catch (NumberFormatException ex) {
		        	
		        }
		        
		        for (int i = 1; i < tokens.length; i+=2) {
		            double operand = Double.parseDouble(tokens[i+1]);
		            switch(tokens[i]) {
		                case "+":
		                    result += operand;
		                    break;
		                case "-":
		                    result -= operand;
		                    break;
		                case "*":
		                    result *= operand;
		                    break;
		                case "/":
		                    result /= operand;
		                    break;
		                case "%":
		                    result %= operand;
		                    break;
		            }
		        }
		        
		        String answer;
		        if (Double.toString(result).contains(".") || displayText.contains(".")) {
		            answer = String.format("%.2f", result);
		        } else {
		            answer = String.format("%.0f", result);
		        }
		        
		        lblDisplay.setText(displayText + " = " + answer);
		        btnDecimalPoint.setEnabled(false);
		        
		    }
		});
